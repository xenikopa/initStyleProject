.menu-toggle
  & ~ label 
    cursor: pointer;
    &:after
      border-left: 5px solid transparent;
      border-right: 5px solid transparent;
      content: '';
      border-bottom: 5px solid black;
      border-top: none;  
  &:checked ~ .menu
      width: 10%;

.menu 
  height: 300px;
  background-color: #f5f6f5;
  width: 20%;